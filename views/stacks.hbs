
      <div class="dashboard">
    <!-- Sidebar -->

        {{#each stacks}}
        <p>Stack Name: {{this.stack_name}}</p>
        <p>Created by: {{this.user_name}}</p>
        <p>Template: {{this.template_name}}</p>
        <p>Group: {{this.group_name}}</p>
        <p>{{formatDate this.creation_date}}</p>
        {{/each}}

    <!-- Main Content -->
    <main class="main-content">
      <header>
        <button class="sidebar-toggle">☰</button>
        <h1>Projects</h1>
      </header>

      <!-- Navigation/Search -->
      <div class="search-bar">
        <input type="text" placeholder="Search...">
        <div class="search-icon">
          <img src="../img/1st trailing-icon.svg" alt="Search Icon">
        </div>
      </div>

      <!-- Project Table -->
      <div class="project-table">

        <!-- Table Header (Make sure this stays) -->
        <div class="table-header">
          <span>Stack name</span>
          <span>Stack type</span>
          <span>Subdomain</span>
          <span>Owner</span>
          <span>Creation date</span>
          <span>Status</span>
          <span>Actions</span>
        </div>
        {{#each stacks}}
        <div class="row-container">
          <div class="table-row" onclick="toggleDetails(this)">
            <span class="stack-name">{{this.stack_name}}</span>
            <span>{{this.template_name}}</span>
            <span>aosb48851.kubelab.dk</span>
            <span class="owner">{{this.user_name}}</span>
            <span class="creation-date">04-06-2024</span>
            <span class="status online">Online</span>
            <span class="actions">
              <button>⟳</button>
              <button>⏸</button>
              <button class="expand">☑️</button>
            </span>
          </div>
          <div class="details-row">
            <span data-mobile-only>Stack Name: MMOE3sem</span>
            <span>Group: {{this.group_name}}</span>
            <span data-mobile-only>Owner: Anders Buch</span>
            <span data-mobile-only>Creation Date: 04-06-2024</span>
            <span>Uptime: 6278 days</span>
            <span>Latest run: 27/13/9044</span>
            <button class="custom-button">Delete</button>
          </div>
        </div>
        {{/each}}
      </div>
    </main>
  </div>


