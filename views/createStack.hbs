<h1>{{title}}</h1>
<form action="/stacks/create" method="POST">
    <label for="name">Stack Name:</label>
    <input type="text" id="name" name="name" required>
    <br><br>

    <label for="swarmId">Swarm ID:</label>
    <input type="text" id="swarmId" name="swarmId" required>
    <br><br>

    <label for="fileContent">Compose File Content:</label>
    <textarea id="fileContent" name="fileContent" rows="10" cols="50" required></textarea>
    <br><br>

    <label for="endpointId">Endpoint:</label>
    <select id="endpointId" name="endpointId" required>
        {{#each endpoints}}
        <option value="{{this.Id}}">{{this.Name}}</option>
        {{/each}}
    </select>
    <br><br>

    <button type="submit">Create Stack</button>
</form>
