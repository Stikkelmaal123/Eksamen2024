<form id="create-stack-form">
    <label for="stackName">Stack Name:</label>
    <input type="text" id="stackName" name="stackName" required />

    <label for="templateName">Template Name:</label>
    <input type="text" id="templateName" name="templateName" required />

    <label for="subdomain">Subdomain:</label>
    <input type="text" id="subdomain" name="subdomain" required />

    <label for="groupsUsersId">Group-User ID:</label>
    <input type="number" id="groupsUsersId" name="groupsUsersId" required />

    <label for="endpointId">Endpoint ID:</label>
    <input type="number" id="endpointId" name="endpointId" required />

    <button type="submit">Create Stack</button>
</form>

<script>
    document.getElementById('create-stack-form').addEventListener('submit', async (e) => {
        e.preventDefault();

        const formData = new FormData(e.target);
        const data = Object.fromEntries(formData);

        const response = await fetch('/stacks/create', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
        });

        const result = await response.json();
        console.log(result);
    });
</script>
